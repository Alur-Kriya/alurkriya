---
import BaseLayout from '@layouts/BaseLayout.astro';
import HeroBanner from '@components/pages/HeroBanner.astro';
import { pages } from '@contents/pages/pages.mjs';

// Get the slug from Astro's params
const slug = 'portfolio';
// Find the matching item
const content = pages.find((item: any) => item.slug === slug);

if (!content) {
  throw new Error(`Page with slug "${slug}" not found`);
}

interface Props {
  heading?: string;
  description?: string;
}
---

<BaseLayout>
  <HeroBanner heading={content.heading} description={content.desc} />
</BaseLayout>
