---
import BaseLayout from '@layouts/BaseLayout.astro';
import HeroBanner from '@/components/pages/HeroBanner.astro';
import { partners } from '@contents/partners/partners.mjs';
import { Image } from 'astro:assets';
---

<BaseLayout title="Our Partners" description="Meet the partners who collaborate with us.">
  <HeroBanner />

  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Our Valued Partners</h2>
        <p class="mt-4 text-lg text-gray-600">We are proud to work with these amazing companies.</p>
      </div>
      <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
        {
          partners.map((partner) => (
            <a
              href={`/partners/${partner.slug}`}
              class="block rounded-lg bg-white p-6 shadow-lg transition-shadow duration-300 hover:shadow-xl"
            >
              <Image
                src={partner.logo}
                alt={`Logo of ${partner.name}`}
                width={150}
                height={80}
                class="mx-auto h-20 w-auto object-contain"
              />
              <h3 class="mt-6 text-center text-xl font-semibold text-gray-900">{partner.name}</h3>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
